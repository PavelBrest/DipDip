<Window x:Class="MusicRnn.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicRnn"
		WindowStyle="ToolWindow"
        mc:Ignorable="d"
        Title="Config" 
		Height="150" Width="420"
		MinHeight="150" MinWidth="420"
		MaxHeight="150" MaxWidth="420">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="100"/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>

		<Label Content="Path to env:"
			   HorizontalAlignment="Right"
			   VerticalAlignment="Center"/>

		<StackPanel Grid.Column="1"
					HorizontalAlignment="Left"
					VerticalAlignment="Center"
					Orientation="Horizontal">
			<TextBox  x:Name="Path"
					  Width="250"/>
			<Button Content="..."
					Margin="5,0"
					Padding="5,0" Click="PathDialogClick"/>
		</StackPanel>

		<Button Content="Ok"
				Grid.Row="1"
				Grid.Column="1"
				Margin="10"
				Padding="5,0"
				HorizontalAlignment="Right"
				VerticalAlignment="Bottom" Click="OkClick"/>
	</Grid>
</Window>
